<section class = "pets">
  <h1><%= @pet.name %></h1>

  <p><%= image_tag "pets/#{@pet.image}" %></p>
  <p>Description: <%= @pet.description %></p>
  <p>Age: <%= @pet.age %></p>
  <p>Sex: <%= @pet.sex %></p>
  <p>Status: <%= @pet.status %></p>

  <%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %>
</section>

