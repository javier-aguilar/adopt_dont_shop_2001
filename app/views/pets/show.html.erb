<section class = "info">
  <section class = "all-pets">
    <section class = "pet-info-view">
      <h1><%= @pet.name %></h1>

      <p><%= image_tag "pets/#{@pet.image}" %></p>
      <p>Description: <%= @pet.description %></p>
      <p>Age: <%= @pet.age %> Years (Approx.)</p>
      <p>Sex: <%= @pet.sex %></p>
      <p>Status: <%= @pet.status %></p>

      <%= link_to @status_link[:name], "#{@status_link[:path]}", method: "patch"  %> |
      <%= link_to "Update Pet", "/pets/#{@pet.id}/edit" %> |
      <%= link_to "Delete Pet", "/pets/#{@pet.id}/", method: "delete"%>
    </section>
  </section>
</section>